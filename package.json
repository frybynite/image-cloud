{
  "name": "@keithfry/image-gallery",
  "version": "0.1.0",
  "description": "TypeScript image gallery library with animated layouts and zoom effects",
  "type": "module",
  "main": "./dist/image-gallery.umd.js",
  "module": "./dist/image-gallery.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/image-gallery.js",
      "require": "./dist/image-gallery.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && tsc && vite build",
    "build:dev": "./scripts/build.sh",
    "build:prod": "./scripts/build.sh --production",
    "build:watch": "vite build --watch",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "serve": "python3 -m http.server 8080",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "image-gallery",
    "typescript",
    "animation",
    "zoom",
    "interactive",
    "radial-layout",
    "google-drive"
  ],
  "author": "Keith Fry",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-dts": "^3.7.1"
  }
}
